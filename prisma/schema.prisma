generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Victim {
  id           String   @id @default(cuid())
  name         String
  age          Int
  neighborhood String
  date         DateTime
  tribute      String?
  submittedBy  String?
  isApproved   Boolean  @default(false)
  image        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("victims")
}

model ViolenceData {
  id             String   @id @default(cuid())
  date           DateTime
  neighborhood   String
  homicides      Int      @default(0)
  latrocinio     Int      @default(0)
  lesaoCorporal  Int      @default(0)
  total          Int      @default(0)
  createdAt      DateTime @default(now())

  @@map("violence_data")
}
